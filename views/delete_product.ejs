<body>
    <h4>Click the product that you want to delete.</h4>
<% for(var i =0;i<products.length;i++){ %>
    <form  action="/pdelete" method="post">
      <div class="Product">
        <input type="checkbox" name="checkbox1" value="<%=products[i]._id%>" onChange="this.form.submit()">
        <p><%= products[i].title%></p>
      </div>
    </form>
  <% }     %>
</body>
</html>
